<li class="dropdown user user-menu">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <%#= image_tag current_user.decorate.avatar, class: "img-circle" %>
    <span class="hidden-xs"><%= current_user.email %></span>
  </a>
  <ul class="dropdown-menu">
    <li class="user-header">
      <%#= image_tag current_user.decorate.avatar, class: "img-circle" %>
      <p><%= current_user.email %></p>
    </li>
    <li class="user-footer">
      <div class="pull-left">
        <%= link_to t(".profile_btn"), "#", class: "btn btn-default btn-flat" %>
      </div>
      <div class="pull-right">
        <%= link_to destroy_user_session_path, class: "btn btn-default btn-flat", method: :delete do %>
          <%= t ".sign_out_btn" %>
        <% end %>
      </div>
    </li>
  </ul>
</li>
