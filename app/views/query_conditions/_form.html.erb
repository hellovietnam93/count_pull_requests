<%= form_for [@repository, @query_condition] do |f| %>
  <div class="form-group">
    <div class="control-label"><%= t ".content" %></div>
    <%= f.text_field :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit t(".save_btn"), class: "btn btn-info" %>
  </div>
<% end %>
